@model TodoApplication.Models.TodoDto

@{
    ViewBag.Title = "Edit Todo";
    Layout = "_Layout";
}

<div class="container mt-5">
    <div class="form-container">
        <h2 class="form-title">Edit Todo</h2>
        <form method="post" class="todo-form">
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label for="TaskTitle">Title</label>
                <input type="text" asp-for="TaskTitle" class="form-control" placeholder="Enter the task title" />
            </div>

            <div class="form-group">
                <label for="TaskDescription">Description</label>
                <textarea asp-for="TaskDescription" class="form-control" rows="3" placeholder="Enter a brief description"></textarea>
            </div>

            <div>
                <input type="hidden" asp-for="TaskDate" />
            </div>

            <div class="form-actions">
                <button type="submit" class="btn btn-submit">Update</button>
                <a asp-action="" class="btn btn-cancel">Cancel</a>
            </div>
        </form>
    </div>
</div>

<style>
    .container {
        max-width: 600px;
        margin: 0 auto;
        background: #f9f9f9;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .form-title {
        text-align: center;
        font-size: 2rem;
        font-weight: bold;
        margin-bottom: 20px;
        color: #333;
    }

    .todo-form .form-group {
        margin-bottom: 20px;
    }

    .todo-form label {
        display: block;
        font-size: 1rem;
        font-weight: bold;
        margin-bottom: 8px;
        color: #555;
    }

    .todo-form .form-control {
        width: 100%;
        padding: 10px;
        font-size: 1rem;
        border: 1px solid #ddd;
        border-radius: 5px;
        background-color: #fff;
        transition: border-color 0.3s ease;
    }

    .todo-form .form-control:focus {
        border-color: #007bff;
        outline: none;
        box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
    }

    .form-actions {
        text-align: center;
        margin-top: 20px;
    }

    .btn {
        padding: 10px 20px;
        font-size: 1rem;
        font-weight: bold;
        border-radius: 30px;
        text-decoration: none;
        transition: all 0.3s ease;
    }

    .btn-submit {
        background: linear-gradient(to right, #6a11cb, #2575fc);
        color: #fff;
        border: none;
    }

    .btn-submit:hover {
        background: linear-gradient(to right, #2575fc, #6a11cb);
        transform: scale(1.05);
    }

    .btn-cancel {
        background-color: #f5f5f5;
        color: #555;
        border: 1px solid #ddd;
        margin-left: 10px;
    }

    .btn-cancel:hover {
        background-color: #ddd;
        color: #333;
    }
</style>
