</script>

<style>
    body {
        font-family: 'Poppins', sans-serif;
        background: linear-gradient(to bottom, #f8f9fa, #e8ecef);
        color: #444;
        margin: 0;
        padding: 0;
    }

    .page-title {
        font-size: 2.5rem;
        font-weight: bold;
        color: #444;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.1);
    }

    .btn-gradient {
        padding: 10px 20px;
        font-size: 1rem;
        font-weight: bold;
        color: #fff;
        background: linear-gradient(to right, #6a11cb, #2575fc);
        border: none;
        border-radius: 30px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        transition: transform 0.2s, box-shadow 0.2s;
    }

    .btn-gradient:hover {
        transform: scale(1.05);
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.3);
    }

    .todo-card {
        background: #ffffff;
        border-radius: 12px;
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);
        padding: 20px;
        transition: transform 0.3s, box-shadow 0.3s;
    }

    .todo-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
    }

    .todo-status {
        display: flex;
        align-items: center;
        margin-bottom: 15px;
    }

    .status-label {
        font-size: 0.9rem;
        font-weight: bold;
        padding: 5px 10px;
        border-radius: 12px;
        margin-left: 10px;
    }

    .status-label.completed {
        background-color: #d4edda;
        color: #155724;
    }

    .status-label.pending {
        background-color: #f8d7da;
        color: #721c24;
    }

    .todo-title {
        font-size: 1.5rem;
        font-weight: 600;
        color: #444;
        margin-bottom: 10px;
    }

    .todo-date {
        font-size: 0.9rem;
        color: #888;
    }

    .todo-description {
        font-size: 1rem;
        color: #666;
        margin-top: 10px;
    }

    .todo-actions {
        display: flex;
        justify-content: space-between;
        margin-top: 20px;
    }

    .btn-update, .btn-delete {
        padding: 8px 20px;
        font-size: 0.9rem;
        border-radius: 30px;
        transition: background 0.2s, transform 0.2s;
        font-weight: bold;
    }

    .btn-update {
        background-color: #ffc107;
        color: #fff;
        border: none;
    }

    .btn-update:hover {
        background-color: #e0a800;
        transform: scale(1.05);
    }

    .btn-delete {
        background-color: #dc3545;
        color: #fff;
        border: none;
    }

    .btn-delete:hover {
        background-color: #c82333;
        transform: scale(1.05);
    }

    .alert {
        font-size: 1rem;
        padding: 15px;
        border-radius: 12px;
        background-color: #eaf4ff;
        color: #007bff;
        border: 1px solid #bee3ff;
    }
